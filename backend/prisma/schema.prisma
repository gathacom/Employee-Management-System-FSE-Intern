generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  position    String
  department  String
  salary      Int
  hire_date   DateTime @map("hire_date") @db.Date 
  status      String   @default("active") 

  @@map("employees")
}